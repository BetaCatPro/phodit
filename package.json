{
  "name": "phodit",
  "version": "0.0.0",
  "description": "Phodal's new Markdown Editor",
  "main": "dist/native/main.js",
  "scripts": {
    "build": "tsc",
    "build:app": "electron-packager --ignore=components . Phodit --platform=darwin --overwrite",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./dist/native/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phodal/phodit.git"
  },
  "author": "Phodal HUANG",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phodal/phodit/issues"
  },
  "homepage": "https://github.com/phodal/phodit#readme",
  "devDependencies": {
    "electron": "^2.0.5",
    "electron-packager": "^12.1.0"
  },
  "dependencies": {
    "electron-window-state": "^4.1.1",
    "showdown": "^1.8.6",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  }
}
