{
  "files": [],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es5",
    "types": ["node"],
    "sourceMap": true,
    "lib": [
      "dom",
      "es5",
      "webworker",
      "es6",
      "scripthost"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
