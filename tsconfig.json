{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "noUnusedLocals": true,
    "outDir": "dist",
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src/**/*",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
